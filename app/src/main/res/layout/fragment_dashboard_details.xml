<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.details.DashboardDetailsFragment">

    <Button
        android:id="@+id/dashboard_details_button"
        android:layout_gravity="top|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/title_dashboard_analytics" />

    <Button
        android:id="@+id/dashboard_details_login"
        android:layout_gravity="top|center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:text="@string/login_title" />

    <TextView
        android:id="@+id/dashboard_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_dashboard_details"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/dashboard_details_repo_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginBottom="56dp"
        tools:text="Repo: 1" />

</FrameLayout>